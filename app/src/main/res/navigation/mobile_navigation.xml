<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.capstone.viziaproject.ui.home.HomeFragment"
        android:label=""
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_navigation_history"
            app:destination="@id/navigation_history" />
        <action
            android:id="@+id/action_navigation_home_to_navigation_news"
            app:destination="@id/navigation_news" />
    </fragment>

    <fragment
        android:id="@+id/navigation_news"
        android:name="com.capstone.viziaproject.ui.news.NewsFragment"
        android:label=""
        tools:layout="@layout/fragment_news" />
    <fragment
        android:id="@+id/navigation_scan"
        android:name="com.capstone.viziaproject.ui.scan.ScanFragment"
        android:label=""
        tools:layout="@layout/fragment_scan" />
    <fragment
        android:id="@+id/navigation_history"
        android:name="com.capstone.viziaproject.ui.history.HistoryFragment"
        android:label=""
        tools:layout="@layout/fragment_history" />
    <fragment
        android:id="@+id/navigation_save"
        android:name="com.capstone.viziaproject.ui.saveHistory.SaveFragment"
        android:label=""
        tools:layout="@layout/fragment_save" />
</navigation>